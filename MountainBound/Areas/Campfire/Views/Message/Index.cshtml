@model List<Topic>
@{
    ViewData["Title"] = "Campfire";
}
<div class="">
    <h2>Campfire</h2>
    <h4>Online Discussion Board</h4>
    <h6>Click on any of the Topics below to join the discussion...</h6>
    <div class="table-responsive">
        <table class="campfire-tbl table table-striped table-bordered table-md">
            <thead>
            <th>Category</th></thead>
            @if (Model == null)
            {
                <tr><td>No Topics created yet</td></tr>

            }
            else
            {
                foreach (var topic in Model)
                {
                    <tr>
                        <td>
                        <a class="cf-heading" asp-action="GetMessages" asp-route-id="@topic.TopicId">@topic.Heading</a>
                        <p class="topic-desc">@topic.Description</p>
                    </tr>
                }
            }
        </table>
    </div>
</div>