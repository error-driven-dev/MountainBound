@using MountainBound.Areas.Trailhead.Models
@using Newtonsoft.Json.Linq

@model List<Trail>

<h2>Trails around @ViewBag.NationalPark</h2>
<h5>Click on the any of the trails below for more information</h5>
<div class="trails-container">
  
        <div class="row">
            @foreach (var a in Model)

        {
            <div class=" trails-item col-sm-12 ">
                <div class="trails-img">
                    <img class="card-img-top" src="@a.ImgSmallMed"/>
                </div>
                <div class="card-body">

                    <small>
                        @for (int i = 0; i < Math.Round((decimal) a.Stars); i++)
                        {
                            <span>&#x2b50</span>
                        }
                    </small>
                    <h6 class="trails-title"><a asp-action="ShowTrail" asp-controller="trail" asp-route-id="@a.Id">@a.Name </a></h6>
                    <h7 class="trails-subtitle">@a.Location </h7>
                    <p class="trails-text">Difficulty: @a.Difficulty</p>
                    <p class="trails-text"> Length: @a.Length</p>
                </div>
            </div>


    }
       
    </div>
</div>




