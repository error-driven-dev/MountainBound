@using MountainBound.Areas.Trailhead.Models
@using Newtonsoft.Json.Linq

@model List<Trail>

<h2>Trails around @ViewBag.NationalPark</h2>
<h5>Click on the any of the trails below for more information</h5>
@foreach (var a in Model)

{ 
<div class="row">
    <div class="col-1 ">
    <img class="float-right" src="@a.ImgSqSmall"  />        
            
       
    </div>
    <div class="col-8">
        <a asp-action="ShowTrail" asp-controller="trail" asp-route-id="@a.Id">@a.Name  </a>  <small>  @for(int i = 0; i<Math.Round((decimal)a.Stars); i++){
                                                                                                          <span>&#x2b50</span>
                                                                                                      }</small> 
        <h6>@a.Location </h6>
    <p class="mb-0">Difficulty: @a.Difficulty</p> <p class="mt-0"> Length: @a.Length</p>

    </div>
</div>
    <hr />
}



