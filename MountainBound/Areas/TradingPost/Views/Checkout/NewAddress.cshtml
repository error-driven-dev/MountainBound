ion data-country="1" value="11">New York</option><option data-country="1" value="1">North Carolina</option><option data-country="1" value="3">North Dakota</option><option data-country="1" value="43">Ohio</option><option data-country="1" value="38">Oklahoma</option><option data-country="1" value="28">Oregon</option><option data-country="1" value="49">Pennsylvania</option><option data-country="1" value="255">Puerto Rico</option><option data-country="1" value="12">Rhode Island</option><option data-country="1" value="2">South Carolina</option><option data-country="1" value="7">South Dakota</option><option data-country="1" value="46">Tennessee</option><option data-country="1" value="32">Texas</option><option data-country="1" value="254">U.S. Virgin Islands</option><option data-country="1" value="41">Utah</option><option data-country="1" value="34">Vermont</option><option data-country="1" value="4">Virginia</option><option data-country="1" value="29">Washington</option><option data-country="1" value="5">West Virginia</option><option data-country="1" value="50">Wisconsin</option><option data-country="1" value="17">Wyoming</option></select>

                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Zipcode" class="control-label"></label>
                    <input maxlength="5" asp-for="Zipcode" class="form-control" />
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Continue Checkout" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ProductDirectory" asp-controller="Product">Back to Store</a>
