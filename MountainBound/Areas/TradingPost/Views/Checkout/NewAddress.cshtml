
@model AddressViewModel
@{
    ViewData["Title"] = "Shipping";
}


@{
    Layout = "/Views/Shared/_Master.cshtml";
}


<div class="page">
    <h4>Shipping Information</h4>

    <p class="heading-text">Please enter name and shipping information for order. Fields marked with <font color="#cc3300">*</font> are required.</p>

 
  
